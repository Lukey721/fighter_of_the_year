<h1>Register</h1>

<%= form_with url: users_path, method: :post, local: true do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name, name: "user[name]" %>
  </div>

  <div>
    <%= form.label :email %>
    <%= form.email_field :email, name: "user[email]" %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password, name: "user[password]" %>
  </div>

  <div>
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, name: "user[password_confirmation]" %>
  </div>

  <div>
    <%= form.submit "Register" %>
  </div>
<% end %>